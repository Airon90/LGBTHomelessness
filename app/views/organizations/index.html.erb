<div class="col-lg-12">
  <%= map(:center => {
        :latlng => [@organizations.first.latitude, @organizations.first.longitude],
        :zoom => 12,
      },
      :tile_layer => "http://openmapsurfer.uni-hd.de/tiles/roads/x={x}&y={y}&z={z}",
      :markers => @organizations.select{|o| o.latitude and o.longitude }.collect{|o| {:latlng => [o.latitude, o.longitude]}},
      :max_zoom => 12
  ) %>
</div>

<div class="col-lg-12">
  <ul class='list-group'>
    <% @organizations.each do |organization| %>
      <li class='list-group-item'><%= link_to organization.name, organization %> <span class="badge"><%=organization.programs.count%></span></li>
    <%end%>
  </ul>
</div>
